{
    "configurations": [
        {
            "type": "java",
            "name": "buytrip server configuration",
            "request": "launch",
            "mainClass": "br.com.orion.buytripconfig.BuyTripServerConfigApplication",
            "projectName": "buytrip-config",
            "vmArgs": "-noverify"
        },
        {
            "name": "buytrip service discovery",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buytripservicediscovery.BuyTripServiceDiscoveryApplication",
            "projectName": "buytrip-service-discovery",
            "vmArgs": "-noverify -Dspring.profiles.active=dev"
        },
        {
            "name": "bank",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.bank.BankApplication",
            "projectName": "bank",
            "vmArgs": "-noverify -Dspring.profiles.active=dev"
        },
        {
            "name": "buytrip",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buytrip.BuyTripApplication",
            "projectName": "buytrip",
            "vmArgs": "-noverify -Dspring.profiles.active=dev"
        },        
        {
            "type": "java",
            "name": "buytrip process",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buytripprocess.BuytripProcessApplication",
            "projectName": "buytrip-process",
            "vmArgs": "-noverify -Dspring.profiles.active=dev"
        },
        {
            "name": "buytrip feedback",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buyfeedback.BuyFeedbackApplication",
            "projectName": "buytrip-feedback",
            "vmArgs": "-noverify"
        },
        {
            "name": "buytrip gateway",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buygateway.BuyGatewayApplication",
            "projectName": "buytrip-gateway",
            "vmArgs": "-noverify"
        },
        {
            "name": "buytrip gateway cloud",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "br.com.orion.buytripgateway.GatewayApplication",
            "projectName": "buytrip-gateway-cloud",
            "vmArgs": "-noverify"
        }
    ]
